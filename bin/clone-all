#!/bin/bash

# go to project root directory
cd "$(dirname "$(readlink -f "$0")")/.."

while read -r line || [[ -n "$line" ]]; do
  hps_dir="hps/$line"
  echo
  echo "==  $hps_dir  =="
  if [ -d "$hps_dir" ]; then
    (
      cd "$hps_dir"
      git pull -r
    )
  else
    git clone git@github.com:hiptest/$line.git "$hps_dir"
  fi
done < 'hps/repos-list'
